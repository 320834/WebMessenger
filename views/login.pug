extends layout

block content
    div(class = "container")
        div(style = "display:flex")
            div(class = "col-3")
            div(class = "col-6")
                div(style = "display:flex")
                    div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                    h1(class = "col-lg-4 col-md-6 col-sm-9 col-xs-9" style="text-align:center") Login
                    div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
            div(class = "col-3")
        p(style="height:20px")
        div(style = "display:flex")
            div(class = "col-3")
            div(class = "col-6")
                form(class = "col-12" action="/loginUser" method="post")
                    div(style = "display:flex")
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                        input(class = "col-lg-4 col-md-6 col-sm-9 col-xs-9" type="text" placeholder ="username" name = "username")
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                    p
                    div(style = "display:flex")
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                        input(class = "col-lg-4 col-md-6 col-sm-9 col-xs-9" type="password" placeholder ="password" name = "password") 
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                    p
                    div(style = "display:flex")
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
                        button(class="col-lg-4 col-md-6 col-sm-9 col-xs-9 btn btn-primary" style = "width:200px") Submit
                        div(class = "col-lg-4 col-md-3 col-sm-1 col-xs-1")
            div(class = "col-3")