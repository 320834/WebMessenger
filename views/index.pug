extends layout

block content
  div(class = 'container')
    h1(style = "text-align:center")= title
    p(style = "text-align:center") Welcome to my Chat Service
    div(style = "display:flex; flex-wrap: wrap")
      div(class = "col-lg-4 col-xs-1")
      form(class = "col-lg-1 col-xs-0" action="/register" method="get")
        p
        button(class= "btn btn-primary" style = "width: 150px") Register
      div(class = "col-lg-1 col-xs-0")
      form(class = "col-lg-1 col-xs-0" action="/login" method="get")
        p
        button(class= "btn btn-secondary" style = "width: 150px") Login
  p